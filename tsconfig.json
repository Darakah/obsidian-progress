{
  "include": [
    "src/**/*",
    "src/*ts"
  ],
  "exclude": [
    "node_modules/*"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015"
    ],
    "types": [
      "node",
      "svelte",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "src": [
        "src/*"
      ]
    }
  }
}